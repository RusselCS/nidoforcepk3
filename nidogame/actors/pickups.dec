actor HPPickup : CustomInventory 11003
{
//$Category NidoForce-Pickups
Scale 4.0
States
{
Spawn:
HPUP ABCD 4
loop
Pickup:
HPUP A 0 A_JumpIf(ACS_ExecuteWithResult(NIDO_STATUS, STATUS_HEALCHECK)==TRUE, "Success")
fail
Success:
HPUP A 0 ACS_ExecuteWithResult(NIDO_STATUS, STATUS_HEAL)
stop
}
}

